// datasource and generator
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Models
model Creative {
  id              String           @id
  campaignId      String
  headline        String
  thumbnailUrl    String
  destinationUrl  String
  createdAt       DateTime         @default(now())
  latestMetricsAt DateTime?
  aggSpend        Float            @default(0)
  aggImpr         Int              @default(0)
  aggClicks       Int              @default(0)
  aggConv         Int              @default(0)
  aggCpa          Float?
  aggRoas         Float?
  featuresJson    Json?
  status          String           @default("active")
  actions         Action[]
  metricSnapshots MetricSnapshot[]
}

model Action {
  id           String   @id @default(cuid())
  creativeId   String
  type         String
  reasonShort  String
  reasonDetail String
  decidedBy    String
  decidedAt    DateTime @default(now())
  inputsJson   Json?
  Creative     Creative @relation(fields: [creativeId], references: [id])
}

model MetricSnapshot {
  id          String   @id @default(cuid())
  creativeId  String
  at          DateTime @default(now())
  spend       Float
  impr        Int
  clicks      Int
  ctr         Float
  cpc         Float
  conv        Int
  cpa         Float?
  roas        Float?
  siteTop3    String?
  platformMix String?
  Creative    Creative @relation(fields: [creativeId], references: [id])
}
